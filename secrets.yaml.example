# ESPHome Air Quality Monitor - Secrets Configuration
# Copy this file to secrets.yaml and fill in your values
# NEVER commit secrets.yaml to version control!

# WiFi Configuration
wifi_ssid: "YourWiFiNetworkName"
wifi_password: "YourWiFiPassword"

# API Encryption Key (32 bytes, base64 encoded)
# Generate with: openssl rand -base64 32
api_encryption_key: "REPLACE_WITH_YOUR_BASE64_KEY_HERE=="

# OTA Password (for over-the-air updates)
ota_password: "your-secure-ota-password"

# Fallback AP Password (used when WiFi fails)
ap_password: "fallback-ap-password"
